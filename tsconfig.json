{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build/",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "dom",
      "es2016",
      "es2017.object"
    ],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "pretty": true,
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": false,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": [
    "build",
    "config",
    "jest",
    "node_modules",
    "public",
    "requests"
  ]
}
