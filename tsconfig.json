{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build/",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "dom",
      "es2016",
      "es2017.object"
    ],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "pretty": true,
    "rootDirs": ["src"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": false
  },
  "exclude": [
    "node_modules",
    "build",
    "jest"
  ]
}
