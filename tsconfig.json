{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build/",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "dom",
      "es2016",
      "es2017.object"
    ],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "pretty": true,
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": false,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": [
    ".cache",
    "build",
    "coverage",
    "node_modules",
    "public",
    "requests",
    "responses",
    "scripts",
    "src/setupJest.js"
  ]
}
